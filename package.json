{
  "name": "minesweeper-react",
  "description": "An XP Minesweeper clone using react (for fun).",
  "author": "Travis Wiertzema",
  "license": "MIT",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/classnames": "^2.2.8",
    "@types/node": "^12.0.8",
    "@types/react": "^16.8.20",
    "@types/react-dom": "^16.8.4",
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:js": "webpack",
    "build:types": "tsc --emitDeclarationOnly",
    "doc:readme": "documentation readme src/lib/utils.js -s API -c documentation.yml",
    "doc:serve": "documentation serve src/lib/utils.js -f md -c documentation.yml",
    "start": "webpack-dev-server --open",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "test": "jest"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "@types/seedrandom": "^2.4.28",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.0.0",
    "documentation": "^11.0.1",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.9.0",
    "eslint-plugin-promise": "^4.2.1",
    "file-loader": "^4.0.0",
    "jest": "^24.8.0",
    "postcss-loader": "^3.0.0",
    "postcss-normalize": "^8.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "1.18.2",
    "seedrandom": "^3.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.36.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
